{
  "name": "ifcastle/aql",
  "description": "Abstract Query Language - Monorepo",
  "keywords": [
    "aql",
    "query",
    "language",
    "orm",
    "database",
    "abstraction"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Edmond Dantes",
      "email": "edmondifthen@proton.me"
    }
  ],
  "require": {
    "php": ">=8.4",
    "ext-pdo": "*",
    "ifcastle/aop": "^0.1.0",
    "ifcastle/design-patterns": "^0.2.20",
    "ifcastle/di": "^0.6.0",
    "ifcastle/exceptions": "^5.0",
    "ifcastle/type-definitions": "^0.5.7"
  },
  "autoload": {
    "psr-4": {
      "IfCastle\\AQL\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IfCastle\\AQL\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.2",
    "rector/rector": "^1.2",
    "ifcastle/codestyle": "^0.2.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit ./tests",
    "cs-fix": "php-cs-fixer fix",
    "cs-check": "php-cs-fixer fix --dry-run --diff",
    "rector": "rector process",
    "rector-dry": "rector process --dry-run"
  }
}
